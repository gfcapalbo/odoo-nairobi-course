<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- LISTING IMAGE -->

        <record id="trip_listing_image_tree_view" model="ir.ui.view">
            <field name="name">trip.listing.image.tree</field>
            <field name="model">trip.listing.image</field>
            <field name="arch" type="xml">
                <tree string="Trip Listing Image">
                    <field name="listing_id"/>
                    <field name="name"/>
                    <field name="image" widget="image"/>
                </tree>
            </field>
        </record>

        <record id="trip_listing_image_form_view" model="ir.ui.view">
            <field name="name">trip.listing.image.form</field>
            <field name="model">trip.listing.image</field>
            <field name="arch" type="xml">
                <form string="Trip Listing Image" version="10.0">
                    <sheet>
                        <field name="image" widget="image" class="oe_avatar"/>
                        <div class="oe_title">
                            <h1>
                                <field name="name" class="oe_inline"/>
                            </h1>
                        </div>
                        <group>
                            <field name="listing_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_trip_listing_image" model="ir.actions.act_window">
            <field name="name">Trip Listing Images</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">trip.listing.image</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
        </record>

        <menuitem name="Listing Images"
                  action="action_trip_listing_image"
                  parent="menu_listing_listing"
                  id="menu_trip_listing_listing_image"
                  sequence="4"/>
    </data>
</odoo>