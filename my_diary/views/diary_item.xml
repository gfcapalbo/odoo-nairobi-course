<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	
	<!-- tree view -->	
	<record id="tree_diary_items" model="ir.ui.view">
		<field name="name">Diary Items</field>
		<field name="model">diary.item</field>
		<field name="arch" type="xml">
			<tree>
				<field name="name" />
				<field name="date" />
			</tree>
		</field>
	</record>

	<!-- Minimal form view a record of type ir.ui.view -->
	<record id="form_diary_items" model="ir.ui.view">
		<field name="name">Diary Items</field>
		<field name="model">diary.item</field>
		<field name="arch" type="xml">
			<form>
				<group>
					<field name="name" />
					<field name="date" />
				</group>
				<group>
					<field name="content" />
				</group>
			</form>
		</field>
	</record>

	<act_window id="show_diary_items"
		name="diary_items"
		res_model="diary.item"
		view_mode="list,form"
		/>

	<menuitem id="diary_menu"
		action="show_diary_items"		
		/>

</odoo>
